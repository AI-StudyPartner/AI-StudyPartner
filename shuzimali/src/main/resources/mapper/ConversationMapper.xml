<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.edu.zjweu.cs.shuzimali.mapper.ConversationMapper">
    <resultMap id="ConversationMap" type="cn.edu.zjweu.cs.shuzimali.entity.Conversation">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="lastMessage" column="last_message"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="listByUserId" parameterType="int" resultMap="ConversationMap">
        select id, user_id, title, last_message, updated_at
        from t_conversation
        where user_id = #{userId}
        order by updated_at desc
    </select>

    <insert id="insert" parameterType="cn.edu.zjweu.cs.shuzimali.entity.Conversation" useGeneratedKeys="true" keyProperty="id">
        insert into t_conversation (user_id, title, last_message, updated_at)
        values (#{userId}, #{title}, #{lastMessage}, now())
    </insert>

    <update id="updateLastMessage">
        update t_conversation
        set last_message = #{lastMessage}, updated_at = now()
        where id = #{id}
    </update>
</mapper>


